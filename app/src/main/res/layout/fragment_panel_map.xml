<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ubung.tc.ubungmobile.controlador.PanelMapFragment">


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_sport"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_add"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_buscar"
        android:layout_alignTop="@+id/imageButton_add"
        android:layout_alignStart="@+id/imageButton_sport"/>



    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_options"
        android:layout_alignTop="@+id/imageButton_sport"
        android:layout_alignStart="@+id/imageButton_add" />

</RelativeLayout>
