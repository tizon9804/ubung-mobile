<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ubung.tc.ubungmobile.controlador.EventoActivity"
    android:id="@+id/evento_register"
    android:background="@android:color/holo_orange_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tittle_crear_evento"
        android:text="@string/title_crear_evento"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_organiza"
        android:id="@+id/title_organiza_evento"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/tittle_crear_evento"
        android:layout_toStartOf="@+id/organiza_evento"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/organiza"
        android:id="@+id/organiza_evento"
        android:layout_alignTop="@+id/title_organiza_evento"
        android:layout_alignEnd="@+id/tittle_crear_evento"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_deporte_evento"
        android:id="@+id/title_deporte_evento"
        android:layout_alignTop="@+id/deportes"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/deportes"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title_zona_evento"
        android:id="@+id/title_zona_evento"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/title_organiza_evento"
        android:layout_toStartOf="@+id/zonas"
        android:textColor="#ffffffff" />



    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/deportes"
        android:layout_below="@+id/zonas"
        android:layout_alignStart="@+id/zonas"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:background="@android:color/holo_green_dark" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/zonas"
        android:layout_alignTop="@+id/title_zona_evento"
        android:layout_alignStart="@+id/organiza_evento"
        android:gravity="center"
        android:background="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_button"
        android:text="@string/btn_crear"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
